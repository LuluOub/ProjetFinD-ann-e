import pyxel
from random import *
tableau = [7,1,3,2,5]
Tab = []
Tab = [['1' for i in range(10)] for i in range(5)]


xgentil = 4
ygentil = 4
Tab[xgentil][ygentil] = "2"

xtir= xgentil -1
ytir= ygentil
Tab[xtir][ytir] = 'â–ˆ'


xmechant = 1
ymechant = 2
Tab[xmechant][ymechant] = "x"


class App:
    def __init__(self):
        pyxel.init(300, 150)
        pyxel.run(self.update, self.draw)


    def update(self):
        pass

    def draw(self):
        x = 0
        y = 0
        for i in Tab:
            x = x + 15
            if i == "1":
                pyxel.rect(x,y,10,15,tableau[1])
            if i == "2":
                pyxel.rect(xgentil, ygentil,8,8,tableau[2])

App()
